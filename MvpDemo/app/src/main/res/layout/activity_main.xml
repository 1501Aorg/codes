<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bwei.mvpdemo.MainActivity">


    <EditText
        android:layout_width="300dp"
        android:inputType="numberPassword"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/passWord" />

    <Button
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:id="@+id/regist"
        android:layout_below="@+id/passWord"
        android:layout_alignRight="@+id/passWord"
        android:layout_alignEnd="@+id/passWord" />

    <Button
        android:text="登陆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/login"
        android:layout_below="@+id/passWord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:hint="请输入用户名"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/username"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/passWord"
        android:layout_alignStart="@+id/passWord"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
        android:text="but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/but1" />

    <Button
        android:text="but2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but2"
        android:layout_alignBaseline="@+id/but1"
        android:layout_alignBottom="@+id/but1"
        android:layout_alignLeft="@+id/bbu"
        android:layout_alignStart="@+id/bbu" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but3"
        android:layout_alignBaseline="@+id/but2"
        android:layout_alignBottom="@+id/but2"
        android:layout_alignRight="@+id/passWord"
        android:layout_alignEnd="@+id/passWord" />

    <Button
        android:text="but4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/but4"
        android:layout_below="@+id/but2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
